block title
  title Explore groups

block breadcrumbs  
  li
    a(href='home-lu.html') Home
  li
    a(href='explore.html') Explore
  li
    a(href='explore-groups.html') Groups

block content
              
  .row.margin-top-l              
              
    .col-xs-12.col-sm-8
    
      h4.section-title Community groups
    
      include molecules/_group2.jade
      include molecules/_group1.jade
      include molecules/_group3.jade
      include molecules/_group4.jade
      
      nav
        ul.pagination
          li.pager__item.pager__item--previous.disabled
            a(href="#0", aria-label='Previous')    
              span(aria-hidden="true") 
                i.material-icons chevron_left
          li.pager__item.active
            a(href="#1") 1
          li.pager__item 
            a(href="#1") 2
          li.pager__item 
            a(href="#1") 3          
          li.pager__item 
            a(href="#1") 4
          li.pager__item.pager__item--next
            a(href='#', aria-label='Next')
              span(aria-hidden="true")
                i.material-icons chevron_right

block scriptinline  
  
  script.
    function enableMe(id) {
      jQuery('#' + id).removeClass('disabled');
    }
