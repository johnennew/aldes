extends ./layout/base-lu.jade

block title
  title Search content

block breadcrumbs  
  li
    a(href='home-lu.html') Home
  li
    a(href='search-content.html') Search content

block pagetitle

  .container.hero-container
    .cover
      h1.page-title.h2 Search 
      br 
      form.hero-form(role='search', method='get', action='search-content.html')
        .form-group
          input.form-control(type='text', placeholder='Search', value='all the content' name='search', autocomplete='off')
          input.form-submit(type='submit', value='')
          span.search-icon
            i.material-icons search

    .brand-secondary.z-depth-1
      nav(role="navigation" aria-label="Tabs")
        h2.visually-hidden Secondary navigation
        ul.nav.nav-tabs.tabs-center.brand-secondary.nav-tabs--xl
          li.active
            a(href='search-content.html') Content 
            span.visually-hidden (active tab) 
          li
            a(href="search-members.html") Members  
  

block content
              
  .row.margin-top-l    

    .col-xs-12.col-sm-4.col-sm-last.margin-bottom-l
    
      .margin-top-exposed-filter
      
        button.waves-effect.waves-light.btn.btn-default.btn-block.btn-raised.visible-xs-inline-block.js-open-canvas
          i.material-icons.pull-left tune
          | Filter
        .off-canvas.off-canvas-right.off-canvas-xs-only
          .offcanvas-head
            header.complementary-title Filter
            .offcanvas-tools.visible-xs-block
              .js-close-canvas.btn.btn-icon-toggle.btn-user-light.pull-right
                i.material-icons close
        
          .offcanvas-body
            form
              .form-group
                label Content type
                select.form-control
                  option(value="all", selected) - Any -
                  option(value="event") Event
                  option(value="topic") Topic
              
              .form-actions.clearfix
                button.btn.btn-link(type='submit', value='Reset') Reset
                button.btn.btn-default.pull-right(type='submit', value='Filter') Filter
  
    .col-xs-12.col-sm-8
    
      h4.section-title Content results
      p If you are searching for members, <a href="search-members.html">click here</a>
      
      include molecules/_topic1.jade
      include molecules/_event1.jade
      include molecules/_page1.jade
      include molecules/_event2.jade
      include molecules/_topic2.jade
      include molecules/_topic3.jade
      include molecules/_event3.jade
      include molecules/_event4.jade
      include molecules/_topic4.jade

      nav
        ul.pagination
          li.pager__item.pager__item--previous.disabled
            a(href="#0", aria-label='Previous')    
              span(aria-hidden="true") 
                i.material-icons chevron_left
          li.pager__item.active
            a(href="#1") 1
          li.pager__item 
            a(href="#1") 2
          li.pager__item 
            a(href="#1") 3          
          li.pager__item 
            a(href="#1") 4
          li.pager__item.pager__item--next
            a(href='#', aria-label='Next')
              span(aria-hidden="true")
                i.material-icons chevron_right
